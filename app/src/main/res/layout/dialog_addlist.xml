<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dialog_iv_selfi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noimg"
            android:layout_alignLeft="@id/dialog_tv_addselfi"
            android:clickable="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#000000"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/dialog_iv_addselfi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:layout_below="@id/dialog_iv_selfi"
            android:clickable="true"/>
        <TextView
            android:id="@+id/dialog_tv_addselfi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진추가"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_toRightOf="@id/dialog_iv_addselfi"
            android:layout_alignBottom="@id/dialog_iv_addselfi"
            android:clickable="true"/>
        <TextView
            android:id="@+id/dialog_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@id/dialog_tv_addselfi"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/dialog_et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이름을 입력하세요"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:textColor="#000000"
            android:layout_toRightOf="@id/dialog_tv_name"
            android:layout_marginLeft="8dp"
            android:minWidth="180dp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/dialog_tv_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@id/dialog_tv_addselfi"
            android:layout_alignBottom="@id/dialog_tv_addselfi"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/dialog_et_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="#000000"
            android:layout_toRightOf="@id/dialog_tv_pass"
            android:layout_alignBaseline="@id/dialog_tv_pass"
            android:layout_marginLeft="8dp"
            android:minWidth="150dp"
            android:maxLines="1"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/dialog_et_msg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:outlineProvider="background"
        android:outlineSpotShadowColor="#545454"
        android:background="@null"
        android:hint="글작성"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        android:padding="4dp"
        android:gravity="top"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/dialog_iv_showpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/dialog_iv_takepic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_photo_library_black_24dp"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:clickable="true"/>
    </RelativeLayout>




</LinearLayout>